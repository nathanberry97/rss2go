{{ define "feed_input_form" }}
<form class="feed__form"
      hx-post="{{ .Endpoint }}"
      hx-trigger="submit"
      hx-swap="none"
      hx-on::after-request="clearInput()">
    <div class="feed__form-group">
        <input class="feed__input"
               type="text"
               id="url"
               name="url"
               placeholder="{{ .Label }}"
               required>
        <button class="feed__submit" type="submit">
            <img class="feed__submit-icon"
                 src="/static/images/icons/search.svg"
                 alt="Search">
        </button>
    </div>
</form>
{{ end }}
